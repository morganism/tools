#!/bin/bash

[[ -z $1 ]] { echo "Missing filename.\nUsage: $(basename $0) FILE" && exit 2 }  
[[ -f $1 ]] && {vi $1; exit $?}           # file exists .. edit
[[ -f $HOME/.env ]] && source $HOME/.env  # source env file

touch $1
chmod 755 $1
echo "#!/bin/bash " >> $1
echo ": <<DOCXX" >> $1
echo "Add description" >> $1
echo "Author: $AUTHOR" >> $1
echo "DATE: ${date}" >> $1
echo "DOCXX" >> $1
vi $1
