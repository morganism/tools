#!/usr/bin/env bash

# ghrl -v -j 
# with json out
# verbose out

GITHUB_TOKEN="$(cat ~/tokens/GH_SCALPEL_MAC)"

FIELDS="url,name"
JSON=""
for i in $(seq 1 $#)
do
  echo "${i} ${!i}"
  case "${!i}" in
      -v) FIELDS="$FIELDS,description" && echo "v";;
      -j) JSON="1" && echo "j";;
  esac
done

if [[ -z "$JSON" ]]; then 
  gh repo list -L500 --json $FIELDS -q '.[] | .url +".git§"+ .name +"§"+ .description'
else
  gh repo list -L500 --json $FIELDS
fi
