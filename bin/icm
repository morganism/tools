    show_config_status
    show_menu "Select Database Type" \
        "MySQL" \
        "PostgreSQL" \
        "SQLite" \
        "MongoDB"
    
    get_choice 4
    case $? in
        1) config[database]="mysql" ;;
        2) config[database]="postgresql" ;;
        3) config[database]="sqlite" ;;
        4) config[database]="mongodb" ;;
        98)
            current_menu="${menu_stack[-1]}"
            unset menu_stack[-1]
            return
            ;;
        99) exit 0 ;;
    esac
    
    current_menu="${menu_stack[-1]}"
    unset menu_stack[-1]
}

handle_ssl_config() {
    menu_stack+=("$current_menu")
    current_menu="ssl"
    
    show_header
    show_config_status
    show_menu "SSL Configuration" \
        "Enable SSL" \
        "Disable SSL"
    
    get_choice 2
    case $? in
        1) config[ssl]="enabled" ;;
        2) config[ssl]="disabled" ;;
        98)
            current_menu="${menu_stack[-1]}"
            unset menu_stack[-1]
            return
            ;;
        99) exit 0 ;;
    esac
    
    current_menu="${menu_stack[-1]}"
    unset menu_stack[-1]
}

show_final_config() {
    show_header
    
    # Progress bar animation
    echo -e "${GREEN}${BOLD}ğŸ‰ Configuration Complete! ğŸ‰${NC}"
    echo ""
    echo -e "${WHITE}${BOLD}â”Œâ”€ Final Configuration â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${WHITE}â”‚${NC}"
    
    # Show each config item with appropriate emoji and styling
    echo -e "${WHITE}â”‚${NC} ğŸ–¥ï¸  ${CYAN}Server:${NC} ${GREEN}${BOLD}${config[server]}${NC}"
    echo -e "${WHITE}â”‚${NC} ğŸ”Œ ${CYAN}Port:${NC} ${GREEN}${BOLD}${config[port]}${NC}"
    
    # Environment with appropriate emoji
    case "${config[environment]}" in
        "development") env_emoji="ğŸ› ï¸" env_color="${YELLOW}" ;;
        "staging") env_emoji="ğŸ§ª" env_color="${BLUE}" ;;
        "production") env_emoji="ğŸš€" env_color="${RED}" ;;
    esac
    echo -e "${WHITE}â”‚${NC} ${env_emoji} ${CYAN}Environment:${NC} ${env_color}${BOLD}${config[environment]}${NC}"
    
    # Database with appropriate emoji
    case "${config[database]}" in
        "mysql") db_emoji="ğŸ¬" ;;
        "postgresql") db_emoji="ğŸ˜" ;;
        "sqlite") db_emoji="ğŸª¶" ;;
        "mongodb") db_emoji="ğŸƒ" ;;
    esac
    echo -e "${WHITE}â”‚${NC} ${db_emoji} ${CYAN}Database:${NC} ${GREEN}${BOLD}${config[database]}${NC}"
    
    # SSL status
    if [ "${config[ssl]}" = "enabled" ]; then
        echo -e "${WHITE}â”‚${NC} ğŸ”’ ${CYAN}SSL:${NC} ${GREEN}${BOLD}âœ… Enabled${NC}"
    else
        echo -e "${WHITE}â”‚${NC} ğŸ”“ ${CYAN}SSL:${NC} ${YELLOW}${BOLD}âš ï¸  Disabled${NC}"
    fi
    
    echo -e "${WHITE}â”‚${NC}"
    echo -e "${WHITE}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
    
    # Generated command in a fancy box
    echo -e "${PURPLE}${BOLD}â”Œâ”€ Generated Command â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${PURPLE}â”‚${NC}"
    echo -e "${PURPLE}â”‚${NC} ${GRAY}myapp --server=${YELLOW}${config[server]}${GRAY} --port=${YELLOW}${config[port]}${GRAY} \\${NC}"
    echo -e "${PURPLE}â”‚${NC} ${GRAY}       --env=${YELLOW}${config[environment]}${GRAY} --db=${YELLOW}${config[database]}${GRAY} --ssl=${YELLOW}${config[ssl]}${NC}"
    echo -e "${PURPLE}â”‚${NC}"
    echo -e "${PURPLE}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
    
    # Action menu
    show_menu "What would you like to do?" \
        "âš¡ Execute command now" \
        "ğŸ’¾ Save to script file" \
        "ğŸ“‹ Copy to clipboard" \
        "ğŸ”„ Back to main menu"
    
    get_choice 4
    case $? in
        1)
            echo -e "${GREEN}${BOLD}âš¡ Executing command...${NC}"
            echo ""
            echo -e "${CYAN}â”Œâ”€ Command Output â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
            echo -e "${CYAN}â”‚${NC} ${GRAY}myapp --server=${config[server]} --port=${config[port]} --env=${config[environment]} --db=${config[database]} --ssl=${config[ssl]}${NC}"
            echo -e "${CYAN}â”‚${NC}"
            echo -e "${CYAN}â”‚${NC} ${YELLOW}ğŸ”„ Starting application...${NC}"
            echo -e "${CYAN}â”‚${NC} ${GREEN}âœ… Application started successfully!${NC}"
            echo -e "${CYAN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
            echo ""
            echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
            read
            ;;
        2)
            local script_name="config_command.sh"
            echo "#!/bin/bash" > "$script_name"
            echo "myapp --server=${config[server]} --port=${config[port]} --env=${config[environment]} --db=${config[database]} --ssl=${config[ssl]}" >> "$script_name"
            chmod +x "$script_name"
            echo -e "${GREEN}âœ… Command saved to ${BOLD}$script_name${NC}"
            echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
            read
            ;;
        3)
            local cmd_text="myapp --server=${config[server]} --port=${config[port]} --env=${config[environment]} --db=${config[database]} --ssl=${config[ssl]}"
            if command -v xclip >/dev/null 2>&1; then
                echo "$cmd_text" | xclip -selection clipboard
                echo -e "${GREEN}ğŸ“‹ Command copied to clipboard!${NC}"
            elif command -v pbcopy >/dev/null 2>&1; then
                echo "$cmd_text" | pbcopy
                echo -e "${GREEN}ğŸ“‹ Command copied to clipboard!${NC}"
            else
                echo -e "${YELLOW}âš ï¸  Clipboard tool not found. Install xclip (Linux) or use pbcopy (macOS)${NC}"
                echo -e "${GRAY}Command: ${WHITE}$cmd_text${NC}"
            fi
            echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
            read
            ;;
        4)
            return
            ;;
        99)
            exit 0
            ;;
    esac
}

# Main menu loop with enhanced visuals
main_menu() {
    while true; do
        show_header
        show_progress_bar
        show_config_status
        
        # Check if all required fields are set
        all_set=true
        for key in server port environment database ssl; do
            if [ -z "${config[$key]}" ]; then
                all_set=false
                break
            fi
        done
        
        local menu_options=(
            "Configure Server Settings"
            "Select Environment"
            "Configure Database"
            "Configure SSL Security"
        )
        
        if [ "$all_set" = true ]; then
            menu_options+=("ğŸ¯ Generate & Execute Command")
        else
            menu_options+=("ğŸš« Complete all settings first")
        fi
        
        show_menu "ğŸ  Main Configuration Menu" "${menu_options[@]}"
        
        local max_selectable=4
        if [ "$all_set" = true ]; then
            max_selectable=5
        fi
        
        get_choice $max_selectable
        case $? in
            1) handle_server_config ;;
            2) handle_environment_config ;;
            3) handle_database_config ;;
            4) handle_ssl_config ;;
            5) 
                if [ "$all_set" = true ]; then
                    show_final_config
                else
                    echo -e "${RED}âŒ Please complete all configuration items first!${NC}"
                    echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
                    read
                fi
                ;;
            98) 
                echo -e "${YELLOW}â„¹ï¸  Already at main menu${NC}"
                sleep 1
                ;;
            99) 
                echo -e "${PURPLE}${BOLD}"
                echo "    â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
                echo "    â•‘                                                      â•‘"
                echo "    â•‘              ğŸ‘‹ Thank you for using                  â•‘"
                echo "    â•‘           Configuration Wizard! ğŸŒŸ                  â•‘"
                echo "    â•‘                                                      â•‘"
                echo "    â•‘              Have a great day! ğŸš€                   â•‘"
                echo "    â•‘                                                      â•‘"
                echo "    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
                echo -e "${NC}"
                sleep 1
                exit 0
                ;;
        esac
    done
}

# Enhanced trap with animated exit
trap 'echo -e "\n${YELLOW}âš ï¸  Use ${RED}q${YELLOW} to quit properly ${YELLOW}âš ï¸${NC}"; sleep 1' INT

# Animated loading function
show_loading() {
    local message="$1"
    local duration="${2:-2}"
    
    echo -ne "${CYAN}$message${NC}"
    for i in $(seq 1 $duration); do
        for spinner in 'â ‹' 'â ™' 'â ¹' 'â ¸' 'â ¼' 'â ´' 'â ¦' 'â §' 'â ‡' 'â '; do
            echo -ne "\r${CYAN}$message ${YELLOW}$spinner${NC}"
            sleep 0.1
        done
    done
    echo -e "\r${GREEN}$message âœ…${NC}"
}

