    sleep 0.2
    echo "    â•‘                                                      â•‘"
    sleep 0.2
    echo "    â•‘        ğŸŒŸ Welcome to Configuration Wizard ğŸŒŸ         â•‘"
    sleep 0.2
    echo "    â•‘                                                      â•‘"
    sleep 0.2
    echo "    â•‘  This tool will guide you through setting up your    â•‘"
    sleep 0.2
    echo "    â•‘  application with an interactive menu system.        â•‘"
    sleep 0.2
    echo "    â•‘                                                      â•‘"
    sleep 0.2
    echo "    â•‘              Press Enter to begin...                 â•‘"
    sleep 0.2
    echo "    â•‘                                                      â•‘"
    sleep 0.2
    echo "    â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${NC}"
    
