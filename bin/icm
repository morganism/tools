#!/bin/bash
# Progress indicator for configuration completeness
show_progress_bar() {
    local completed=0
    local total=5
    
    # Count completed configurations
    for key in server port environment database ssl; do
        if [ -n "${config[$key]}" ]; then
            ((completed++))
        fi
    done
    
    local percentage=$((completed * 100 / total))
    local filled=$((completed * 20 / total))
    local empty=$((20 - filled))
    
    echo -e "${WHITE}${BOLD}â”Œâ”€ Configuration Progress â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${WHITE}â”‚${NC}"
    
    # Progress bar
    echo -ne "${WHITE}â”‚${NC} ${CYAN}Progress:${NC} ["
    
    # Filled portion
    for i in $(seq 1 $filled); do
        echo -ne "${GREEN}â–ˆ${NC}"
    done
    
    # Empty portion
    for i in $(seq 1 $empty); do
        echo -ne "${GRAY}â–‘${NC}"
    done
    
    echo -e "] ${YELLOW}${BOLD}$percentage%${NC}"
    echo -e "${WHITE}â”‚${NC} ${GRAY}($completed/$total items configured)${NC}"
    echo -e "${WHITE}â”‚${NC}"
    echo -e "${WHITE}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
}

# Interactive CLI Menu System
# Walks user through providing arguments via menus and questions

declare -A config
declare -a menu_stack
declare current_menu="main"

# ANSI Color codes and effects
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
CYAN='\033[0;36m'
WHITE='\033[1;37m'
GRAY='\033[0;90m'
NC='\033[0m' # No Color

# ANSI Effects
BOLD='\033[1m'
DIM='\033[2m'
UNDERLINE='\033[4m'
BLINK='\033[5m'
REVERSE='\033[7m'
RESET='\033[0m'

# Background colors
BG_RED='\033[41m'
BG_GREEN='\033[42m'
BG_YELLOW='\033[43m'
BG_BLUE='\033[44m'
BG_PURPLE='\033[45m'
BG_CYAN='\033[46m'

# Clear screen and show animated header
show_header() {
    clear
    echo -e "${CYAN}${BOLD}"
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘  ğŸš€ ${WHITE}Interactive System Configuration Tool${CYAN}  â•‘"
    echo "â• â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•£"
    echo "â•‘  ${YELLOW}âœ¨ Walk through setup with guided menus âœ¨${CYAN}   â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo -e "${NC}"
    echo ""
}

# Show current config status with fancy boxes
show_config_status() {
    echo -e "${WHITE}${BOLD}â”Œâ”€ ğŸ“Š Current Configuration â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${WHITE}â”‚${NC}"
    
    # Server status
    if [ -n "${config[server]}" ]; then
        echo -e "${WHITE}â”‚${NC} ğŸ–¥ï¸  Server: ${GREEN}${BOLD}${config[server]}${NC}"
    else
        echo -e "${WHITE}â”‚${NC} ğŸ–¥ï¸  Server: ${RED}${DIM}âŒ Not configured${NC}"
    fi
    
    # Port status
    if [ -n "${config[port]}" ]; then
        echo -e "${WHITE}â”‚${NC} ğŸ”Œ Port: ${GREEN}${BOLD}${config[port]}${NC}"
    else
        echo -e "${WHITE}â”‚${NC} ğŸ”Œ Port: ${RED}${DIM}âŒ Not configured${NC}"
    fi
    
    # Environment status
    if [ -n "${config[environment]}" ]; then
        case "${config[environment]}" in
            "development") env_emoji="ğŸ› ï¸" ;;
            "staging") env_emoji="ğŸ§ª" ;;
            "production") env_emoji="ğŸš€" ;;
            *) env_emoji="âš™ï¸" ;;
        esac
        echo -e "${WHITE}â”‚${NC} ${env_emoji} Environment: ${GREEN}${BOLD}${config[environment]}${NC}"
    else
        echo -e "${WHITE}â”‚${NC} âš™ï¸  Environment: ${RED}${DIM}âŒ Not configured${NC}"
    fi
    
    # Database status
    if [ -n "${config[database]}" ]; then
        case "${config[database]}" in
            "mysql") db_emoji="ğŸ¬" ;;
            "postgresql") db_emoji="ğŸ˜" ;;
            "sqlite") db_emoji="ğŸª¶" ;;
            "mongodb") db_emoji="ğŸƒ" ;;
            *) db_emoji="ğŸ—„ï¸" ;;
        esac
        echo -e "${WHITE}â”‚${NC} ${db_emoji} Database: ${GREEN}${BOLD}${config[database]}${NC}"
    else
        echo -e "${WHITE}â”‚${NC} ğŸ—„ï¸  Database: ${RED}${DIM}âŒ Not configured${NC}"
    fi
    
    # SSL status
    if [ -n "${config[ssl]}" ]; then
        if [ "${config[ssl]}" = "enabled" ]; then
            echo -e "${WHITE}â”‚${NC} ğŸ”’ SSL: ${GREEN}${BOLD}âœ… Enabled${NC}"
        else
            echo -e "${WHITE}â”‚${NC} ğŸ”“ SSL: ${YELLOW}${BOLD}âš ï¸  Disabled${NC}"
        fi
    else
        echo -e "${WHITE}â”‚${NC} ğŸ” SSL: ${RED}${DIM}âŒ Not configured${NC}"
    fi
    
    echo -e "${WHITE}â”‚${NC}"
    echo -e "${WHITE}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
    echo ""
}

# Enhanced menu function with unicode and emojis
show_menu() {
    local title="$1"
    shift
    local options=("$@")
    
    echo -e "${PURPLE}${BOLD}â”Œâ”€ $title â”€$(printf 'â”€%.0s' $(seq 1 $((50 - ${#title}))))â”${NC}"
    echo -e "${PURPLE}â”‚${NC}"
    
    for i in "${!options[@]}"; do
        local option_num=$((i+1))
        local option_text="${options[$i]}"
        
        # Add appropriate emoji based on option
        case "$option_text" in
            *"Server"*|*"hostname"*) emoji="ğŸ–¥ï¸ " ;;
            *"port"*|*"Port"*) emoji="ğŸ”Œ " ;;
            *"Environment"*) emoji="ğŸŒ " ;;
            *"Database"*) emoji="ğŸ—„ï¸ " ;;
            *"SSL"*) emoji="ğŸ”’ " ;;
            *"Test"*) emoji="ğŸ§ª " ;;
            *"Generate"*|*"Run"*) emoji="âš¡ " ;;
            *"Development"*) emoji="ğŸ› ï¸ " ;;
            *"Staging"*) emoji="ğŸ§ª " ;;
            *"Production"*) emoji="ğŸš€ " ;;
            *"MySQL"*) emoji="ğŸ¬ " ;;
            *"PostgreSQL"*) emoji="ğŸ˜ " ;;
            *"SQLite"*) emoji="ğŸª¶ " ;;
            *"MongoDB"*) emoji="ğŸƒ " ;;
            *"Enable"*) emoji="âœ… " ;;
            *"Disable"*) emoji="âŒ " ;;
            *) emoji="â–¶ï¸ " ;;
        esac
        
        echo -e "${PURPLE}â”‚${NC} ${CYAN}${BOLD}[$option_num]${NC} $emoji${WHITE}$option_text${NC}"
    done
    
    echo -e "${PURPLE}â”‚${NC}"
    echo -e "${PURPLE}â”‚${NC} ${GRAY}[${YELLOW}b${GRAY}]${NC} ğŸ”™ ${GRAY}Back${NC}"
    echo -e "${PURPLE}â”‚${NC} ${GRAY}[${RED}q${GRAY}]${NC} ğŸšª ${GRAY}Quit${NC}"
    echo -e "${PURPLE}â””$(printf 'â”€%.0s' $(seq 1 52))â”˜${NC}"
    echo ""
}

# Enhanced choice input with animation
get_choice() {
    local max_option=$1
    while true; do
        echo -ne "${CYAN}${BOLD}â¯ ${WHITE}Select option ${GRAY}[${GREEN}1-$max_option${GRAY}, ${YELLOW}b${GRAY}, ${RED}q${GRAY}]${WHITE}: ${NC}"
        read -r choice
        
        case $choice in
            [1-9]|[1-9][0-9])
                if [ "$choice" -le "$max_option" ]; then
                    echo -e "${GREEN}âœ“ ${GRAY}Option $choice selected${NC}"
                    sleep 0.3
                    return $choice
                else
                    echo -e "${RED}âŒ Invalid option. Please select 1-$max_option${NC}"
                fi
                ;;
            b|B)
                echo -e "${YELLOW}ğŸ”™ Going back...${NC}"
                sleep 0.3
                return 98  # Back
                ;;
            q|Q)
                echo -e "${RED}ğŸ‘‹ Goodbye!${NC}"
                return 99  # Quit
                ;;
            *)
                echo -e "${RED}âŒ Invalid input. Please try again.${NC}"
                ;;
        esac
    done
}

# Enhanced text input with fancy prompts
get_text_input() {
    local prompt="$1"
    local default="$2"
    local validator="$3"
    
    while true; do
        echo -e "${CYAN}â”Œâ”€ Input Required â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
        echo -e "${CYAN}â”‚${NC}"
        if [ -n "$default" ]; then
            echo -e "${CYAN}â”‚${NC} ğŸ“ $prompt"
            echo -e "${CYAN}â”‚${NC} ${GRAY}Default: ${YELLOW}$default${NC}"
            echo -e "${CYAN}â”‚${NC}"
            echo -ne "${CYAN}â””â”€â¯${NC} ${WHITE}"
        else
            echo -e "${CYAN}â”‚${NC} ğŸ“ $prompt"
            echo -e "${CYAN}â”‚${NC}"
            echo -ne "${CYAN}â””â”€â¯${NC} ${WHITE}"
        fi
        
        read -r input
        echo -e "${NC}"
        
        # Use default if input is empty
        if [ -z "$input" ] && [ -n "$default" ]; then
            input="$default"
        fi
        
        # Validate input if validator function provided
        if [ -n "$validator" ]; then
            if $validator "$input"; then
                echo -e "${GREEN}âœ… Valid input: ${BOLD}$input${NC}"
                sleep 0.5
                echo "$input"
                return 0
            else
                echo -e "${RED}âŒ Invalid input. Please try again.${NC}"
                echo ""
            fi
        else
            echo -e "${GREEN}âœ… Input accepted: ${BOLD}$input${NC}"
            sleep 0.5
            echo "$input"
            return 0
        fi
    done
}

# Enhanced validators with better error messages
validate_port() {
    local port="$1"
    if [[ "$port" =~ ^[0-9]+$ ]] && [ "$port" -ge 1 ] && [ "$port" -le 65535 ]; then
        return 0
    else
        echo -e "${RED}ğŸš« Port must be a number between 1 and 65535${NC}"
        return 1
    fi
}

validate_hostname() {
    local hostname="$1"
    if [[ "$hostname" =~ ^[a-zA-Z0-9.-]+$ ]] && [ ${#hostname} -le 253 ]; then
        return 0
    else
        echo -e "${RED}ğŸš« Invalid hostname format (use letters, numbers, dots, hyphens only)${NC}"
        return 1
    fi
}

# Menu handlers
handle_server_config() {
    menu_stack+=("$current_menu")
    current_menu="server"
    
    while true; do
        show_header
        show_config_status
        show_menu "Server Configuration" \
            "Set hostname/IP" \
            "Set port" \
            "Test connection"
        
        get_choice 3
        case $? in
            1)
                config[server]=$(get_text_input "Enter server hostname or IP" "${config[server]}" "validate_hostname")
                ;;
            2)
                config[port]=$(get_text_input "Enter port number" "${config[port]:-8080}" "validate_port")
                ;;
            3)
                if [ -n "${config[server]}" ] && [ -n "${config[port]}" ]; then
                    echo -e "${CYAN}â”Œâ”€ Connection Test â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
                    echo -e "${CYAN}â”‚${NC} ğŸ” Testing connection to ${YELLOW}${config[server]}:${config[port]}${NC}"
                    echo -e "${CYAN}â”‚${NC}"
                    echo -ne "${CYAN}â”‚${NC} ${YELLOW}â³ Please wait"
                    for i in {1..5}; do
                        sleep 0.3
                        echo -n "."
                    done
                    echo ""
                    echo -e "${CYAN}â”‚${NC}"
                    
                    # Simulate connection test (replace with real test)
                    if timeout 3 bash -c "</dev/tcp/${config[server]}/${config[port]}" 2>/dev/null; then
                        echo -e "${CYAN}â”‚${NC} ${GREEN}âœ… Connection successful!${NC}"
                    else
                        echo -e "${CYAN}â”‚${NC} ${RED}âŒ Connection failed (host may be down or port closed)${NC}"
                    fi
                    
                    echo -e "${CYAN}â”‚${NC}"
                    echo -e "${CYAN}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜${NC}"
                    echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
                    read
                else
                    echo -e "${RED}âŒ Please set server and port first${NC}"
                    echo -ne "${GRAY}Press ${WHITE}Enter${GRAY} to continue...${NC}"
                    read
                fi
                ;;
            98)
                current_menu="${menu_stack[-1]}"
                unset menu_stack[-1]
                return
                ;;
            99)
                exit 0
                ;;
        esac
    done
}

handle_environment_config() {
    menu_stack+=("$current_menu")
    current_menu="environment"
    
    show_header
    show_config_status
    show_menu "Select Environment" \
        "Development" \
        "Staging" \
        "Production"
    
    get_choice 3
    case $? in
        1) config[environment]="development" ;;
        2) config[environment]="staging" ;;
        3) config[environment]="production" ;;
        98)
            current_menu="${menu_stack[-1]}"
            unset menu_stack[-1]
            return
            ;;
        99) exit 0 ;;
    esac
    
    current_menu="${menu_stack[-1]}"
    unset menu_stack[-1]
}

