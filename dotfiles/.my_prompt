[[ -f ~/.datetime.functions ]] && source ~/.datetime.functions

save(){
  MY_PROMPT=$PS1
  echo $MY_PROMPT >> ~/.PS1.$(ts)
}

save

# Set terminal title (optional)
PS1="\[\e]0;\u@\h: \w\a\]"

# Segment 1: Dark Gray background (100) with Light Yellow text (93)
PS1+=$'\[\e[100;93m\] \u@\h '

# Arrow from Segment 1 → Segment 2:
#   Arrow’s foreground is set to dark gray as a foreground (90)
#   Arrow’s background is set to Light Blue (104)
PS1+=$'\[\e[97;100m\]\U2325 '

# Segment 2: Light Blue background (104) with Black text (30)
# Segment 2: Light Blue background (104) with bright white text (97)
PS1+=$'\[\e[104;30m\]\w'

# Arrow from Segment 2 → default background:
#   Arrow’s foreground is bright blue (94) and background resets to default (49)
PS1+=$'\[\e[97;100m\] \U2318' #⌘ ⌥ ⌃ 

# Reset formatting (no trailing prompt symbol)
PS1+=$'\[\e[0m\] '

save

